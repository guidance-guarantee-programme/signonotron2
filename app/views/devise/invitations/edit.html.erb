<% content_for :title, "Set your passphrase" %>

<div class="page-title">
  <h1>Set your passphrase</h1>
</div>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
  <%= render "devise/shared/error_messages", resource: resource if resource.errors.present? %>
  <%= f.hidden_field :invitation_token %>

  <%= render partial: "devise/passwords/change_password_panel", locals: { f: f, user: resource, submit_text: t("users.edit.set_passphrase") } %>
<% end %>
